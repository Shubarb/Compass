<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#272727"
        tools:context=".view.view.main.HomeActivity">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/nameapp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"/>
        <ImageView
            android:id="@+id/btnADS"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/remove_ads"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_90sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/compassMain"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_230sdp"
                android:src="@drawable/compass"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/tam_compass"
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_marginEnd="@dimen/_3sdp"/>

        <TextView
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_330sdp"
            android:text="200°S"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btnLocationHere"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/distince"
            android:layout_marginTop="@dimen/_375sdp"
            android:layout_marginStart="@dimen/_55sdp"/>

        <TextView
            android:id="@+id/locationHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="37°47'36''N 122°25'3'' W"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_385sdp"
            android:layout_marginStart="@dimen/_90sdp"/>

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/location"
            android:layout_marginTop="@dimen/_403sdp"
            android:layout_marginStart="@dimen/_55sdp"/>

        <TextView
            android:id="@+id/btnViewLocationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_413sdp"
            android:fontFamily="@font/poppins_light"
            android:text="View Location Details"
            android:textColor="#0192FE"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/btnType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_470sdp"
            android:src="@drawable/btntype"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_550sdp"
            android:background="@drawable/shape_home">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7sdp">
                <ImageView
                    android:id="@+id/btnMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_map"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btnTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_theme"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btnSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_setting"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutFragmentType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</layout>